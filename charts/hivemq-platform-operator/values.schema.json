{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "properties" : {
    "containerSecurityContext" : {
      "description" : "Configures the security context for the HiveMQ Platform Operator container. Some fields are present in both SecurityContext and PodSecurityContext. When both are set, the values in SecurityContext take precedence.",
      "properties" : {
        "runAsGroup" : {
          "format" : "int64",
          "type" : "integer"
        },
        "runAsNonRoot" : {
          "type" : "boolean"
        },
        "runAsUser" : {
          "format" : "int64",
          "type" : "integer"
        }
      },
      "type" : "object"
    },
    "crd" : {
      "properties" : {
        "apply" : {
          "type" : "boolean"
        },
        "waitReady" : {
          "type" : "boolean"
        },
        "waitTimeout" : {
          "type" : "string",
          "pattern" : "^P(?:(?:\\d+Y)?(?:\\d+M)?(?:\\d+D)?(?:T(?:\\d+H)?(?:\\d+M)?(?:\\d+(?:\\.\\d+)?S)?)?)$"
        }
      },
      "type" : "object"
    },
    "env" : {
      "items" : {
        "type" : "object"
      },
      "type" : "array"
    },
    "http" : {
      "properties" : {
        "port" : {
          "minimum" : 1000,
          "type" : "integer"
        }
      },
      "type" : "object"
    },
    "https" : {
      "properties" : {
        "port" : {
          "minimum" : 1000,
          "type" : "integer"
        }
      },
      "type" : "object"
    },
    "hivemqPlatformServiceAccount" : {
      "properties" : {
        "create" : {
          "type" : "boolean"
        },
        "name" : {
          "type" : "string"
        },
        "permissions" : {
          "properties" : {
            "create" : {
              "type" : "boolean"
            },
            "validate" : {
              "type" : "boolean"
            }
          },
          "type" : "object"
        },
        "validate" : {
          "type" : "boolean"
        }
      },
      "type" : "object"
    },
    "hivemqPlatformStatefulSet" : {
      "properties" : {
        "rollingRestartOnTemplateMetadataChange" : {
          "type" : "boolean"
        }
      },
      "type" : "object"
    },
    "image" : {
      "properties" : {
        "initImageName" : {
          "type" : "string"
        },
        "name" : {
          "type" : "string"
        },
        "pullPolicy" : {
          "enum" : [
            "IfNotPresent",
            "Never",
            "Always"
          ],
          "type" : "string"
        },
        "pullSecretName" : {
          "type" : "string"
        },
        "repository" : {
          "type" : "string"
        },
        "tag" : {
          "type" : "string"
        }
      },
      "required" : [
        "repository",
        "name",
        "tag",
        "initImageName"
      ],
      "type" : "object"
    },
    "javaOpts" : {
      "type" : "string"
    },
    "logConfiguration" : {
      "type" : "boolean"
    },
    "logLevel" : {
      "enum" : [
        "DEBUG",
        "ERROR",
        "FATAL",
        "INFO",
        "TRACE",
        "WARN"
      ],
      "type" : "string"
    },
    "networkLogLevel" : {
      "enum" : [
        "DEBUG",
        "ERROR",
        "FATAL",
        "INFO",
        "TRACE",
        "WARN"
      ],
      "type" : "string"
    },
    "podSecurityContext" : {
      "description" : "Configures pod-level security for the HiveMQ Platform Operator pod. Some fields are also present in container.securityContext. Field values of container.securityContext take precedence over field values of PodSecurityContext.",
      "properties" : {
        "enabled" : {
          "type" : "boolean"
        },
        "fsGroup" : {
          "format" : "int64",
          "type" : "integer"
        },
        "runAsGroup" : {
          "format" : "int64",
          "type" : "integer"
        },
        "runAsNonRoot" : {
          "type" : "boolean"
        },
        "runAsUser" : {
          "format" : "int64",
          "type" : "integer"
        }
      },
      "type" : "object"
    },
    "quarkusLogLevel" : {
      "enum" : [
        "DEBUG",
        "ERROR",
        "FATAL",
        "INFO",
        "TRACE",
        "WARN"
      ],
      "type" : "string"
    },
    "rbac" : {
      "properties" : {
        "create" : {
          "type" : "boolean"
        }
      },
      "type" : "object"
    },
    "resources" : {
      "properties" : {
        "cpu" : {
          "type" : "string"
        },
        "ephemeralStorage" : {
          "type" : "string"
        },
        "memory" : {
          "type" : "string"
        },
        "overrideLimits" : {
          "type" : "object"
        }
      },
      "type" : "object"
    },
    "selector" : {
      "type" : "string"
    },
    "serviceAccount" : {
      "properties" : {
        "create" : {
          "type" : "boolean"
        },
        "name" : {
          "type" : "string"
        }
      },
      "type" : "object"
    },
    "skdLogLevel" : {
      "enum" : [
        "DEBUG",
        "ERROR",
        "FATAL",
        "INFO",
        "TRACE",
        "WARN"
      ],
      "type" : "string"
    },
    "tls" : {
      "properties" : {
        "keystorePassword" : {
          "type" : "string"
        },
        "secretName" : {
          "type" : "string"
        },
        "truststorePassword" : {
          "type" : "string"
        }
      },
      "type" : "object"
    }
  },
  "type" : "object"
}
