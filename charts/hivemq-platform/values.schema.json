{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "properties" : {
    "config" : {
      "type" : "object",
      "properties" : {
        "create" : {
          "type" : "boolean"
        },
        "name" : {
          "type" : "string"
        },
        "overrideHiveMQConfig" : {
          "type" : "string"
        },
        "overrideStatefulSet" : {
          "type" : "string"
        },
        "dataHub" : {
          "type" : "object",
          "properties" : {
            "dataValidationEnabled" : {
              "type" : "boolean"
            },
            "behaviorValidationEnabled" : {
              "type" : "boolean"
            }
          }
        },
        "customTracingConfig" : {
          "type" : "string"
        },
        "customLogbackConfig" : {
          "type" : "string"
        }
      }
    },
    "additionalInitContainers" : {
      "type" : "array",
      "items" : {
        "type" : "object"
      }
    },
    "additionalContainers" : {
      "type" : "array",
      "items" : {
        "type" : "object"
      }
    },
    "controlCenter" : {
      "type" : "object",
      "properties" : {
        "username" : {
          "type" : "string"
        },
        "password" : {
          "type" : "string"
        }
      }
    },
    "restApi" : {
      "type" : "object",
      "properties" : {
        "authEnabled" : {
          "type" : "boolean"
        }
      }
    },
    "additionalVolumes" : {
      "type" : "array",
      "items" : {
        "type" : "object",
        "properties" : {
          "name" : {
            "type" : "string"
          },
          "mountName" : {
            "type" : "string"
          },
          "containerName" : {
            "type" : "string"
          },
          "path" : {
            "type" : "string"
          },
          "subPath" : {
            "type" : "string"
          },
          "type" : {
            "type" : "string",
            "enum" : [
              "configMap",
              "secret",
              "emptyDir",
              "persistentVolumeClaim"
            ]
          }
        }
      }
    },
    "volumeClaimTemplates" : {
      "type" : "array",
      "items" : {
        "type" : "object",
        "properties" : {
          "kind" : {
            "type" : "string",
            "enum" : [
              "PersistentVolumeClaim"
            ]
          },
          "apiVersion" : {
            "type" : "string",
            "enum" : [
              "v1"
            ]
          },
          "metadata" : {
            "type" : "object"
          },
          "spec" : {
            "type" : "object"
          }
        },
        "required" : [
          "kind",
          "apiVersion",
          "metadata",
          "spec"
        ]
      }
    },
    "metrics" : {
      "type" : "object",
      "properties" : {
        "enabled" : {
          "type" : "boolean"
        },
        "port" : {
          "type" : "integer",
          "minimum" : 0,
          "maximum" : 65535
        },
        "path" : {
          "type" : "string"
        }
      }
    },
    "services" : {
      "type" : "array",
      "items" : {
        "type" : "object",
        "properties" : {
          "type" : {
            "type" : "string",
            "enum" : [
              "control-center",
              "rest-api",
              "metrics",
              "mqtt",
              "websocket"
            ]
          },
          "annotations" : {
            "type" : "object"
          },
          "labels" : {
            "type" : "object"
          },
          "legacyPortName" : {
            "type": "string"
          },
          "serviceType" : {
            "type" : "string",
            "enum" : [
              "ClusterIP",
              "NodePort",
              "LoadBalancer"
            ]
          },
          "exposed" : {
            "type" : "boolean"
          },
          "name" : {
            "type" : "string",
            "maxLength" : 63
          },
          "port" : {
            "type" : "integer",
            "minimum" : 0,
            "maximum" : 65535
          },
          "containerPort" : {
            "type" : "integer",
            "minimum" : 0,
            "maximum" : 65535
          },
          "hivemqProxyProtocol" : {
            "type": "boolean"
          },
          "keystoreSecretName" : {
            "type" : "string"
          },
          "keystoreSecretKey" : {
            "type" : "string"
          },
          "keystorePassword" : {
            "type" : "string"
          },
          "keystorePrivatePassword" : {
            "type" : "string"
          },
          "keystorePasswordSecretName" : {
            "type" : "string"
          },
          "keystorePasswordSecretKey" : {
            "type" : "string"
          },
          "keystorePrivatePasswordSecretKey" : {
            "type" : "string"
          },
          "truststoreSecretName" : {
            "type" : "string"
          },
          "truststoreSecretKey" : {
            "type" : "string"
          },
          "truststorePassword" : {
            "type" : "string"
          },
          "truststorePasswordSecretName" : {
            "type" : "string"
          },
          "tlsClientAuthenticationMode" : {
            "type" : "string",
            "enum" : [
              "NONE",
              "OPTIONAL",
              "REQUIRED"
            ]
          }
        }
      }
    },
    "extensions" : {
      "type" : "array",
      "items" : {
        "type" : "object",
        "properties" : {
          "name" : {
            "type" : "string"
          },
          "enabled" : {
            "type" : "boolean"
          },
          "supportsHotReload" : {
            "type" : "boolean"
          },
          "configMapName" : {
            "type" : "string"
          },
          "requestHeaderSecretName" : {
            "type" : "string"
          },
          "extensionUri" : {
            "type" : "string"
          },
          "customizationUri" : {
            "type" : "string"
          },
          "priority" : {
            "type" : "integer"
          },
          "startPriority" : {
            "type" : "integer"
          }
        }
      }
    },
    "image" : {
      "type" : "object",
      "properties" : {
        "name" : {
          "type" : "string"
        },
        "pullPolicy" : {
          "type" : "string",
          "enum" : [
            "IfNotPresent",
            "Never",
            "Always"
          ]
        },
        "pullSecretName" : {
          "type" : "string"
        },
        "repository" : {
          "type" : "string"
        },
        "tag" : {
          "type" : "string"
        }
      },
      "required" : [
        "repository",
        "name"
      ]
    },
    "license" : {
      "type" : "object",
      "properties" : {
        "additionalLicenses" : {
          "type" : "object"
        },
        "create" : {
          "type" : "boolean"
        },
        "data" : {
          "type" : "string"
        },
        "dataHub" : {
          "type" : "object"
        },
        "extensions" : {
          "type" : "object"
        },
        "name" : {
          "type" : "string"
        },
        "overrideLicense" : {
          "type" : "string"
        }
      }
    },
    "nodes" : {
      "type" : "object",
      "properties" : {
        "javaOpts" : {
          "type" : "string"
        },
        "logLevel" : {
          "type" : "string",
          "enum" : [
            "FATAL",
            "ERROR",
            "WARN",
            "INFO",
            "DEBUG",
            "TRACE"
          ]
        },
        "replicaCount" : {
          "type" : "integer",
          "minimum" : 1
        },
        "resources" : {
          "type" : "object",
          "properties" : {
            "cpu" : {
              "type" : "string"
            },
            "memory" : {
              "type" : "string"
            },
            "ephemeralStorage" : {
              "type" : "string"
            },
            "overrideLimits" : {
              "type" : "object"
            }
          }
        },
        "annotations" : {
          "type" : "object"
        },
        "labels" : {
          "type" : "object"
        },
        "podSecurityContext" : {
          "type" : "object",
          "properties" : {
            "enabled" : {
              "type" : "boolean"
            },
            "runAsNonRoot" : {
              "type" : "boolean"
            },
            "runAsUser" : {
              "type" : "integer"
            },
            "runAsGroup" : {
              "type" : "integer"
            },
            "fsGroup" : {
              "type" : "integer"
            }
          }
        },
        "env" : {
          "type" : "array",
          "items" : {
            "type" : "object"
          }
        },
        "serviceAccountName" : {
          "type" : "string"
        }
      }
    },
    "podScheduling" : {
      "type" : "object",
      "properties" : {
        "affinity" : {
          "type" : "object"
        },
        "tolerations" : {
          "type" : "array",
          "items" : {
            "type" : "object"
          }
        }
      }
    },
    "operator" : {
      "type" : "object",
      "properties" : {
        "selector" : {
          "type" : "string"
        }
      }
    },
    "hivemqRestrictions" : {
      "type" : "object",
      "properties" : {
        "maxConnections" : {
          "type" : "integer"
        },
        "incomingBandwidthThrottling" : {
          "type" : "integer"
        },
        "noConnectIdleTimeout" : {
          "type" : "integer"
        },
        "maxClientIdLength" : {
          "type" : "integer"
        }
      }
    },
    "hivemqMqtt" : {
      "type" : "object",
      "properties" : {
        "sessionExpiryMaxInterval" : {
          "type" : "integer"
        },
        "messageExpiryMaxInterval" : {
          "type" : "integer"
        },
        "maxPacketSize" : {
          "type" : "integer"
        },
        "serverReceiveMaximum" : {
          "type" : "integer"
        },
        "keepAliveMax" : {
          "type" : "integer"
        },
        "keepAliveAllowUnlimited" : {
          "type" : "boolean"
        },
        "topicAliasEnabled" : {
          "type" : "boolean"
        },
        "topicAliasMaxPerClient" : {
          "type" : "integer"
        },
        "subscriptionIdentifier" : {
          "type" : "boolean"
        },
        "wildcardSubscriptions" : {
          "type" : "boolean"
        },
        "sharedSubscriptions" : {
          "type" : "boolean"
        },
        "maxQualityOfService" : {
          "type" : "integer"
        },
        "retainedMessages" : {
          "type" : "boolean"
        },
        "queuedMessagesMaxSize" : {
          "type" : "integer"
        },
        "queuedMessagesStrategy" : {
          "type" : "string"
        }
      }
    },
    "hivemqMqttAddons" : {
      "type" : "object",
      "properties" : {
        "expiredMessagesTopic" : {
          "type" : "boolean"
        },
        "droppedMessagesTopic" : {
          "type" : "boolean"
        },
        "deadMessagesTopic" : {
          "type" : "boolean"
        }
      }
    },
    "hivemqMqttSecurity" : {
      "type" : "object",
      "properties" : {
        "allowEmptyClientId" : {
          "type" : "boolean"
        },
        "payloadFormatValidation" : {
          "type" : "boolean"
        },
        "utf8Validation" : {
          "type" : "boolean"
        },
        "allowRequestProblemInformation" : {
          "type" : "boolean"
        },
        "controlCenterAuditLog" : {
          "type" : "boolean"
        }
      }
    },
    "migration" : {
      "type" : "object",
      "properties" : {
        "statefulSet" : {
          "type" : "boolean"
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "migration": {
            "type": "object",
            "required": ["statefulSet"],
            "properties": {
              "statefulSet": {
                "const": true
              }
            }
          }
        },
        "required": ["migration"]
      },
      "then": {
        "properties": {
          "services": {
            "items": {
              "required": [
                "type",
                "exposed",
                "legacyPortName",
                "containerPort"
              ]
            }
          }
        }
      },
      "else": {
        "properties": {
          "services": {
            "items": {
              "required": [
                "type",
                "exposed",
                "containerPort"
              ]
            }
          }
        }
      }
    }
  ]
}
